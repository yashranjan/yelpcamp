<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit the comment to <%= camp.name%></h1>
		<div style="width:30%;margin:30px auto;">
			<form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<input class="form-control form-group" type="text" name="comment[text]" value="<%= comment.text %>">
				<button class="btn btn-primary btn-block form-group">Submit</button>
			</form>
			<a href="/campgrounds/<%= camp._id %>">Go back</a>
		</div>	
	<div>
</div>	
<% include ../partials/footer %>