<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Create a new campground</h1>
		<div style="width:30%;margin:30px auto;">
			<form action="/campgrounds" method="POST">
				<input class="form-control form-group" type="text" name="Name" placeholder="Campground's name">
				<input class="form-control form-group" type="text" name="URL" placeholder="Campground's image url">
				<input class="form-control form-group" type="text" name="Description" placeholder="Campground's description">
				<input class="form-control form-group" type="number" name="Price" placeholder="Campgrounds's price(in $/night)" min="0.1" step="0.1">
				<button class="btn btn-primary btn-block form-group">Submit</button>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>	
	<div>
</div>	
<% include ../partials/footer %>