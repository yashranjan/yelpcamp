<% include ../partials/header %>

<div class="container">		
	<header class="jumbotron">
		<div class="container">
			<h1 >Welcome to YELPCamp</h1>
			<p>See Our Handpicked Camps</p>
			<p>
				<a class="btn btn-lg btn-primary" href="/campgrounds/new">Click to add new campground</a>
			</p>
		</div>		
	</header>
</div>
<div class="container">
	<div class="row text-center" style="display:flex,flex-wrap:wrap;">
		<% for(var i=0;i<camp.length;i++){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=<%= camp[i]["image"] %> >
					<div class="caption">
						<h4><%= camp[i].name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%= camp[i]._id %>" class="btn btn-primary">More Info</a>
					</p>		
				</div>	
			</div>
		<% } %>
	</div>	
</div>

<% include ../partials/footer %>